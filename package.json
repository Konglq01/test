{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-**",
      "**/@react-native-**",
      "**/@react-native-**/**",
      "**/expo-**",
      "**/@sentry/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install",
    "reset-modules": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "common-package:extension": "npx lerna add @portkey-wallet/utils --scope=web-extension && npx lerna add @portkey-wallet/hooks --scope=web-extension  && npx lerna add @portkey-wallet/store --scope=web-extension && npx lerna add @portkey-wallet/constants --scope=web-extension",
    "app": "yarn workspace walletappnew run",
    "extension": "yarn workspace web-extension run",
    "app:ca": "yarn workspace mobile-ca run",
    "extension:ca": "yarn workspace web-extension-ca run",
    "test": "jest",
    "test-cover": "jest --coverage",
    "extension-ca:dev": "yarn extension:ca dev:watch",
    "graphql": "yarn workspace @portkey-wallet/graphql run",
    "page": "yarn workspace web-page run"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.5",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.5",
    "babel-plugin-import": "^1.13.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^5.5.2",
    "lint-staged": ">=13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "ts-jest": "^29.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "version": "1.22.19"
}
